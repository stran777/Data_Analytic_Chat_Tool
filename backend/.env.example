# Application Settings
APP_NAME=DataAnalyticChatTool
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# LLM Configuration (Choose one or configure multiple)
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Default LLM Provider (openai, google, anthropic)
DEFAULT_LLM_PROVIDER=openai

# Azure Cosmos DB
COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_KEY=your_cosmos_db_key_here
COSMOS_DATABASE_NAME=data_analytics_chat
COSMOS_CONTAINER_CONVERSATIONS=conversations
COSMOS_CONTAINER_USERS=users
COSMOS_CONTAINER_FINANCIAL_DATA=financial_data

# Vector Store Configuration
VECTOR_STORE_TYPE=chromadb
VECTOR_STORE_PATH=./data/vectorstore
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Memory & Context
MAX_CONVERSATION_HISTORY=10
CONTEXT_WINDOW_SIZE=4000

# RAG Configuration
RAG_ENABLED=True
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# MCP Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=5000

# LangSmith (Optional - for debugging/tracing)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=data-analytics-chat

# Session & Security
SECRET_KEY=your_secret_key_here_change_in_production
SESSION_TIMEOUT=3600
